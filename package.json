{
  "name": "yannovabouw-website",
  "version": "2.0.0",
  "description": "Yannova Ramen en Deuren - Professionele website met PWA functionaliteit",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 3000",
    "dev": "python3 -m http.server 3000",
    "build": "node build.js",
    "build:watch": "nodemon --watch assets --ext css,js --exec 'npm run build'",
    "serve": "python3 -m http.server 8080",
    "test": "echo 'No tests specified'",
    "test:unit": "jest --passWithNoTests",
    "test:e2e": "echo 'E2E tests not configured'",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "echo 'CSS linting not configured'",
    "lint:js": "eslint assets/js/**/*.js --fix",
    "lint:fix": "npm run lint:js",
    "format": "prettier --write \"**/*.{js,json,md,html,css}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,html,css}\"",
    "optimize": "npm run build && node scripts/optimize-performance.js",
    "optimize:ui": "node optimize-ui.js",
    "deploy": "npm run build && echo 'Ready for deployment'",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=dist",
    "analyze": "node analyze-project.js",
    "analyze:bundle": "npm run build && npx webpack-bundle-analyzer dist/js/bundle.js",
    "performance": "npm run build && npm run serve",
    "performance:lighthouse": "lighthouse http://localhost:8080 --output html --output-path ./lighthouse-report.html",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "deps:update": "npm update",
    "deps:check": "npm outdated",
    "clean": "rm -rf dist node_modules/.cache",
    "clean:all": "rm -rf dist node_modules package-lock.json && npm install",
    "photos:optimize": "node optimize-photos.js",
    "photos:install": "npm install sharp --save-dev",
    "photos:setup": "mkdir -p assets/images/raw && echo 'Upload je fotos naar assets/images/raw/ en voer npm run photos:optimize uit'",
    "images:optimize": "node scripts/image-optimizer.js",
    "images:webp": "node scripts/image-optimizer.js webp",
    "performance:analyze": "node scripts/performance-analyzer.js",
    "db:setup": "cd api && node install-schema.js",
    "db:test": "cd api && node test-supabase.js",
    "api:start": "cd api && npm start",
    "api:dev": "cd api && npm run dev",
    "api:test": "cd api && npm test",
    "precommit": "npm run lint && npm run format:check",
    "prepush": "npm run test && npm run build"
  },
  "keywords": [
    "website",
    "pwa",
    "construction",
    "windows",
    "doors",
    "yannova",
    "responsive",
    "performance"
  ],
  "author": "Yannova Ramen en Deuren",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "sharp": "^0.34.4",
    "lighthouse": "^11.7.1",
    "@lhci/cli": "^0.12.0",
    "snyk": "^1.1252.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Rustammiq/yannova-bouw.git"
  },
  "homepage": "https://yannovabouw.ai/",
  "dependencies": {
    "@google/generative-ai": "^0.24.1"
  }
}
